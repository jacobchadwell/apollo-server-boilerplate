{
  "name": "apollo-server-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate GraphQL server for developer onboarding",
  "main": "index.js",
  "scripts": {
    "start": "npm run develop",
    "develop": "concurrently \"npm run debug\" \"npm run generate:watch\"",
    "debug": "nodemon --inspect src/index.ts --watch src/**",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/validator": "^13.7.1",
    "apollo-datasource-rest": "^0.10.0",
    "apollo-server": "^2.25.3",
    "apollo-server-lambda": "^2.25.3",
    "apollo-server-plugin-base": "3.3.0",
    "config": "^3.3.7",
    "dotenv": "^8.6.0",
    "geolib": "^3.3.3",
    "graphql": "^15.8.0",
    "lambda-log": "3.1.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.8",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-document-nodes": "1.17.10",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@types/config": "0.0.38",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/node": "^14.18.9",
    "apollo-server-plugin-base": "3.3.0",
    "concurrently": "^6.5.1",
    "express": "^4.17.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "serverless": "^2.72.2",
    "serverless-dotenv-plugin": "^3.12.2",
    "serverless-offline": "^6.9.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.5"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --require ts-node/register/transpile-only"
    }
  }
}
